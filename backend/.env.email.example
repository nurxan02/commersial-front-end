# Email configuration for production to avoid timeout and spam detection
# Use these environment variables in your production .env file

# General Email Settings
EMAIL_TIMEOUT=10  # Reduce timeout to 10 seconds to avoid long waits

# SMTP Settings for better deliverability and faster response
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=your-smtp-server.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
EMAIL_HOST_USER=orders@depod.az
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=orders@depod.az
SERVER_EMAIL=system@depod.az

