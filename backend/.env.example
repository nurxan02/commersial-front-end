#############################################
# Depod Backend .env example (local dev)
#############################################

# Core
DEBUG=1
SECRET_KEY=change-me
ALLOWED_HOSTS=127.0.0.1,localhost,0.0.0.0

# Database
# Set USE_SQLITE=1 to use local sqlite. Set to 0 to use Postgres with vars below.
USE_SQLITE=1
POSTGRES_DB=depod
POSTGRES_USER=depod
POSTGRES_PASSWORD=depod
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# API auth
JWT_MINUTES=240

# CORS/CSRF
# Add frontend origins you use for static HTML during development.
CORS_ALLOWED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500
CSRF_TRUSTED_ORIGINS=http://127.0.0.1:5500,http://localhost:5500,http://127.0.0.1:8000,http://localhost:8000

# Branding cache-busting (optional)
# STATIC_ASSETS_VERSION=1

# Telegram notifications (optional but recommended)
# Create a bot with BotFather, then put your bot token below
TELEGRAM_BOT_TOKEN=
# Put your chat/group/channel id (e.g., -100xxxxxxxxxx for channels)
TELEGRAM_CHAT_ID=
# Public base URL to link to admin order detail inside Telegram message
ADMIN_BASE_URL=http://127.0.0.1:8000